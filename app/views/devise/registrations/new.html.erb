<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <div class="navbar is-dark" role="navigation" aria-label="main navigation">
        <div class="navbar-start has-text-white-ter">
            <div class="navbar-item">
                <%=image_tag("hedgehog.png", class: 'padding-right', width: '50', height: '50')%>
                    <h4 class="title is-4 has-text-white-ter">Hedgehogs</h4>
            </div>
        </div>
        <div class="navbar-end">
            <a class="navbar-item has-text-grey-lighter">Home</a>
            <a class="navbar-item has-text-grey-lighter">Explore Apps</a>
            <a class="navbar-item has-text-grey-lighter">About us</a>
            <a class="navbar-item has-text-grey-lighter">Support</a>
            <div class="navbar-item">
                <%= link_to "Sign in", new_user_session_path, :class => "button is-primary" %>
            </div>
        </div>
    </div>
</head>

<body>
    <section class="hero is-fullheight is-dark is-bold is-size-6">
        <div class="hero-body">
            <div class="container">
                <div class="columns is-vcentered">
                    <div class="column is-4 is-offset-4">
                        <h3 class="title is-3 has-text-centered">
              Sign up
            </h3>
                        <div class="box">
                          <div class="field">
                            <label class="label">First name</label>
                            <p class="control">
                                <input class="input" type="text" placeholder="John">
                            </p>
                          </div>
                          <div class="field">
                            <label class="label">Last name</label>
                            <p class="control">
                                <input class="input" type="text" placeholder="Doe">
                            </p>
                          </div> <div class="field">
                            <label class="label">Email</label>
                            <p class="control has-icons-left has-icons-right">
                                <input class="input" type="email" placeholder="Email">
                                <span class="icon is-small is-left">
      <i class="fa fa-envelope"></i>
    </span>
                            </p> </div>
                            <div class="field">
                            <label class="label">Password</label>
                            <p class="control has-icons-left">
                                <input class="input" type="password" placeholder="Password">
                                <span class="icon is-small is-left">
      <i class="fa fa-lock"></i>
    </span>
                            </p> </div><div class="field">
                            <label class="label">Confirm Password</label>
                            <p class="control has-icons-left">
                                <input class="input" type="password" placeholder="Confirm Password">
                                <span class="icon is-small is-left">
      <i class="fa fa-lock"></i>
    </span>
                            </p> </div>
                            <div class="field">
                            <p class="control">
                                <button class="button is-info">Register</button>
                                <button class="button is-default">Cancel</button>
                            </p>
                        </div>
                        <nav class="level">
                        <div class="level-left">
                        <div class="level-item">
                        <p> Already have an acount? </p>
                      </div>
                        </div>
                        <div class="level-right">
                        <div class="level-item">
                        <p class="">
                            <%= link_to "Sign in", new_user_session_path, :class => "button is-primary" %>
                        </p>
                      </div>
                    </div>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>